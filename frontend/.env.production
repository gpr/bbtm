# Production Environment Variables
# These should be set in your deployment platform (Render, Vercel, etc.)

# Firebase Configuration (Required for production)
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_firebase_app_id

# Application Configuration
VITE_APP_NAME="Blood Bowl Tournament Management"
VITE_APP_VERSION="1.0.0"

# API Configuration
VITE_API_BASE_URL=https://api.bloodbowltournaments.com
VITE_API_TIMEOUT=10000

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_BETA_FEATURES=false

# Security
VITE_ENABLE_STRICT_MODE=true
VITE_ENABLE_CSP=true

# Performance
VITE_ENABLE_SERVICE_WORKER=true
VITE_ENABLE_LAZY_LOADING=true